<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Edit Detail <i class="fas fa-pen"></i></h5>
          <hr>
          <form method="POST" action="/restaurants/{{restaurant._id}}?_method=PUT">
            <div class="row mb-3 g-2">
              <label for="name" class="col-md-4 col-form-label">
                餐廳名稱（中文）
              </label>
              <div class="col-md-8">
                <input type="string" name="name" class="form-control" id="name" value="{{restaurant.name}}" required>
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="name_en" class="col-md-4 col-form-label">
                餐廳名稱（英文）
              </label>
              <div class="col-md-8">
                <input type="string" name="name_en" class="form-control" id="name_en" value="{{restaurant.name_en}}" required>
              </div>
            </div>
            
           <div class="row mb-3 g-2">
              <label for="category" class="col-md-4 col-form-label">
                類型
              </label>
              <div class="col-md-8">
                <input type="string" name="category" class="form-control" id="category" list="category-list" value="{{restaurant.category}}" required>
                <datalist id="category-list">
                  <option>美式</option>
                  <option>日本料理</option>
                  <option>義式餐廳</option>
                  <option>中東料理</option>
                  <option>酒吧</option>
                  <option>咖啡</option>
                  <option>甜點</option>
                </datalist>
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="image" class="col-md-4 col-form-label">
                照片
              </label>
              <div class="col-md-8">
                <textarea type="string" name="image" class="form-control" id="image" rows="2" required>{{restaurant.image}}</textarea>
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="location" class="col-md-4 col-form-label">
                地址
              </label>
              <div class="col-md-8">
                <input type="string" name="location" class="form-control" id="location" value="{{restaurant.location}}" required>
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="phone" class="col-md-4 col-form-label">
                電話
              </label>
              <div class="col-md-8">
                <input type="string" name="phone" class="form-control" id="phone" value="{{restaurant.phone}}" required>
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="google_map" class="col-md-4 col-form-label">
                Google地圖
              </label>
              <div class="col-md-8">
                <input type="string" name="google_map" class="form-control" id="google_map" value="{{restaurant.google_map}}" required>
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="name-en" class="col-md-4 col-form-label">
                評分
              </label>
              <div class="col-md-8">
                <input type="number" name="rating" class="form-control" id="rating" min="0" max="5" step="0.1" value="{{restaurant.rating}}" required>
                <small class="text-muted form-text">最低0分，最高5分，可接受一位小數</small> 
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="description" class="col-md-4 col-form-label">
                簡介
              </label>
              <div class="col-md-8">
                <textarea type="string" name="description" class="form-control" id="description" rows="5" required>{{restaurant.description}}</textarea>
              </div>
            </div>

            <div class= "d-flex justify-content-end">
              <a class="btn btn-primary mx-2" href="/" role="button">Cancel</a>
              <button class="btn btn-success" type="submit">Save</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>